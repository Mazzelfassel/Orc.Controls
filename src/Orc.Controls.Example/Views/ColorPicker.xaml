<catel:UserControl x:Class="Orc.Controls.Example.Views.ColorPicker"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns:orccontrols="http://schemas.wildgums.com/orc/controls">

    <orccontrols:StackGrid>
        <orccontrols:StackGrid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </orccontrols:StackGrid.ColumnDefinitions>

        <orccontrols:StackGrid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        </orccontrols:StackGrid.RowDefinitions>

        <Label  Content="Pick a color: " HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <orccontrols:ColorPicker Color="Red" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Label  Content="Pick a color: " HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <orccontrols:ColorPicker Style="{StaticResource ComboboxColorPickerStyle}" Color="Green" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </orccontrols:StackGrid>

</catel:UserControl>
