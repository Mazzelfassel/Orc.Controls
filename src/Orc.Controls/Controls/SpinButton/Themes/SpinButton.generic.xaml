<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Orc.Controls"
                    xmlns:catel="http://schemas.catelproject.com"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors">

    <Style x:Key="{x:Type controls:SpinButton}"
           TargetType="{x:Type controls:SpinButton}">
        <Setter Property="BorderBrush" Value="{DynamicResource Orc.Brushes.Control.Default.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Height" Value="{DynamicResource Size.Height}" />
        <Setter Property="Width" Value="20" />
        <!--<Setter Property="Margin" Value="{DynamicResource Margin.TextBox}" />-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SpinButton}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <RepeatButton x:Name="PART_IncreaseButton"
                                      Grid.Row="0"
                                      Margin="0 1 1 0"
                                      Height="NaN"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch"
                                      Focusable="False"
                                      Command="{x:Static controls:SpinButton.MinorIncrease}">
                            <Path Margin="1"
                                  Data="M 0 20 L 35 -20 L 70 20 Z"
                                  Fill="{DynamicResource Orc.Brushes.Control.Default.Foreground}"
                                  Stretch="Uniform" />
                        </RepeatButton>

                        <RepeatButton x:Name="PART_DecreaseButton"
                                      Grid.Row="1"
                                      Margin="0 0 1 1"
                                      Height="NaN"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch"
                                      Focusable="False"
                                      Command="{x:Static controls:SpinButton.MinorDecrease}">
                            <Path Margin="1"
                                  Data="M 0 0 L 35 40 L 70 0 Z"
                                  Fill="{DynamicResource Orc.Brushes.Control.Default.Foreground}"
                                  Stretch="Uniform" />
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>